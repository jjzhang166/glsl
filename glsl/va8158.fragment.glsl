}






float dist(vec3 pos)
{
	float a = sin(sin(time))*0.2;
	float s = sin(a);
	float c = cos(a);
	mat2 r = mat2(
  	 c, -s, 
  	 s, c
	);
	float f = length(pos)-1.0;
	pos.xy = pos.xy * r;
	pos.z += time*0.5;
	return cnoise(pos * 4.0) + ((sin(time)+1.0)/10.0) + max(1.0 - length(pos.xy), 0.0)+f;
}

vec3 color(vec3 pos)
{
	pos *= vec3(0.3);
	//return vec3(1.9);
	return normalize(vec3(cnoise(pos + vec3(time*0.1)), cnoise(pos + vec3(2.43, -0.435*time, 0.45)), cnoise(pos- vec3(7.43, -6.435, 0.45*time))));
}

vec3 normal(vec3 pos)
{
	vec3 n = vec3(0);
	
	n.x = dist(vec3(pos.x-EPS, pos.yz))       - dist(vec3(pos.x+EPS, pos.yz)); 
	n.y = dist(vec3(pos.x, pos.y-EPS, pos.z)) - dist(vec3(pos.x, pos.y+EPS, pos.z)); 
	n.z = dist(vec3(pos.xy, pos.z-EPS))       - dist(vec3(pos.xy, pos.z+EPS)); 
	
	
	return normalize(n);
}

float lambert(vec3 norm)
{
	return sin(dot(SUN, norm));
}

float lambert(vec3 norm, vec3 l)
{
	return sin(dot(l, norm));
}

vec3 ray(vec3 v, vec3 d)
{
	float f = 0.0;
	for(int i = 0; i < 100; i++)
	{
		f = dist(v);
		v += d*f;
		if(f < MIN)
			break;
		if(length(v) > MAX)
			break;
	}
	
	return v;
}

vec3 getColor(vec2 pos)
{
	vec3 d = vec3(pos, 1);
	d = normalize(d);
	vec3 v = vec3(pos, 0);
	v = ray(v, d);
	vec3 c;
	if(length(v) > MAX)
		c = SKY;
	vec3 delta = v-vec3(pos, 0);
	c = color(v) * vec3(lambert(normal(v), normalize(delta+vec3(0, 0, 100.0))));
	float fog = min(1.0, length(delta)/MAX);
	return c * (1.0-fog) + fog;
}

